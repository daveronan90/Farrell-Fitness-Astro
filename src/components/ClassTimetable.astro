---
const classes = [
  [null, "mon", "tue", "wed", "thu", "fri", "sat", "sun"],
  ["6:15", null, "s&c", null, "s&c", null, null, null],
  ["7:00", null, null, "s&c", null, "s&c", null, null],
  ["9:30", "s&c", null, "s&c", null, "s&c", "s&c", "s&c"],
  ["9:45", null, "s&c", null, "s&c", null, null, null],
  ["10:45", null, null, null, null, null, "s&c beginner", null],
  ["16:15", null, "s&c", null, "s&c", null, null, null],
  ["17:30", "s&c", null, "s&c", null, "s&c", null, null],
  ["18:45", "s&c", "str only", "s&c", "str only", null, null, null],
];
---

<div
  class="flex flex-col w-full justify-center items-start mb-12 md:mb-24"
>
  <div class="flex flex-col space-y-1 text-2xl md:text-3xl mb-3 md:mb-6">
    <h1>summer timetable</h1>
    <h2 class="text-xs md:text-base text-gray-500">may 29 to 3 september</h2>
  </div>
  <div
    class="grid grid-rows-9 text-center whitespace-normal md:text-sm text-xxxs w-full font-black"
  >
    {
      classes.map((row, rIdx) => (
        <div class={`grid grid-cols-8 gap-[0.1rem]`}>
          {row.map((cell, cIdx) => (
            <div
              class={`flex items-center justify-center md:py-4 py-2 px-4 ${
                cIdx === 0 && "text-orange-600 text-xxs md:text-base "
              }
            ${
              rIdx === 0 && cIdx !== 0 && "bg-orange-600 text-xxs md:text-base "
            }
            ${rIdx !== 0 && rIdx % 2 === 0 && "bg-gray-600 "}
            ${cell !== null && rIdx !== 0 && cIdx !== 0 && "border"}
            `}
            >
              {cell}
            </div>
          ))}
        </div>
      ))
    }
  </div>
</div>
