---
import { Icon } from "astro-icon";
import { Image } from "astro:assets";
import Logo from "../assets/images/LogoCycles.webp";
import Layout from "../layouts/Layout.astro";

interface service {
  icon: string;
  description: string;
}

const services: service[] = [
  { icon: "bench", description: "4000kg weights" },
  { icon: "cardio", description: "+28 cardio equipment" },
  { icon: "clean", description: "sanitation" },
  { icon: "college", description: "professional staff" },
  { icon: "gymequip", description: "+20 weight machines" },
  { icon: "kcal", description: "personalized programs" },
  { icon: "locker", description: "lockers" },
  { icon: "massage", description: "sports massage" },
  { icon: "measure", description: "measureable results" },
  { icon: "privacy", description: "changing rooms" },
  { icon: "shower", description: "private showers" },
  { icon: "waist", description: "full body conditioning" },
];
---

<Layout title="Farrell Fitness | Gym & Performance Center">
  <div data-aos="fade" class="flex justify-center items-center">
    <Image src={Logo} alt="Logo" loading="eager"/>
  </div>
  <ul class="flex flex-wrap">
    {
      services.map(({ icon, description }) => (
        <li
          data-aos="fade-zoom-in"
          data-aos-delay="0"
          class="flex p-4 space-y-4 flex-col justify-center items-center text-center w-1/2 md:w-1/4"
        >
          <Icon name={icon} class="fill-gray-500 h-24" />
          <div class="">{description}</div>
        </li>
      ))
    }
  </ul>

  <section class="relative my-12">
    <div class="mx-auto flex sm:flex-nowrap flex-wrap">
      <div
        data-aos="fade-right"
        class="lg:w-2/3 md:w-1/2 bg-gray-300 rounded-lg overflow-hidden sm:mr-10 p-10 flex items-end justify-start relative"
      >
        <iframe
          class="absolute inset-0"
          title="map"
          src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2435.109383345706!2d-6.931858084197501!3d52.38656737978914!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x4842b6b899f0bce7%3A0x68eb6b7c600b3055!2sFarrell%20Fitness!5e0!3m2!1sen!2sie!4v1687610160865!5m2!1sen!2sie"
          width="100%"
          height="100%"></iframe>
        <div
          class="bg-white relative flex flex-wrap py-6 rounded shadow-md text-gray-950"
        >
          <div class="lg:w-1/2 px-6">
            <h2 class="title-font font-semibold text-xs">
              Farrell Fitness 27, Woodbine Business Park, New Ross, Co. Wexford
            </h2>
            <p class="mt-1">Gym & Fitness Center</p>
          </div>
          <div class="lg:w-1/2 px-6 mt-4 lg:mt-0">
            <h2 class="title-font font-semibold text-xs pr-4">EMAIL</h2>
            <a class="text-orange-600 md:text-xs text-xxs"
              >info.farrellfitness<br class="hidden md:block" />@gmail.com</a
            >
            <h2 class="title-font font-semibold text-xs mt-4">Phone</h2>
            <p class="">087 775 9716</p>
          </div>
        </div>
      </div>
      <div
        data-aos="fade-right"
        class="lg:w-1/3 md:w-1/2 flex flex-col md:ml-auto w-full md:py-8 mt-8 md:mt-0"
      >
        <h2 class="text-lg mb-1 font-medium title-font text-orange-500">
          Contact us
        </h2>
        <p class="mb-">
          to find out more about what we have to offer and how we can help you
          start your fitness journey
        </p>
        <div class="relative mb-4">
          <label for="name" class="text-sm">Name</label>
          <input
            type="text"
            id="name"
            name="name"
            class="w-full bg-white rounded border border-gray-300 focus:border-orange-500 focus:ring-2 focus:ring-orange-200 text-base outline-none py-1 px-3 transition-colors duration-200 ease-in-out"
          />
        </div>
        <div class="relative mb-4">
          <label for="email" class="text-sm">Email</label>
          <input
            type="email"
            id="email"
            name="email"
            class="w-full bg-white rounded border border-gray-300 focus:border-orange-500 focus:ring-2 focus:ring-orange-200 text-base outline-none py-1 px-3 transition-colors duration-200 ease-in-out"
          />
        </div>
        <div class="relative mb-4">
          <label for="message" class="text-sm">Message</label>
          <textarea
            id="message"
            name="message"
            class="w-full bg-white rounded border border-gray-300 focus:border-orange-500 focus:ring-2 focus:ring-orange-200 h-32 text-base outline-none py-1 px-3 resize-none transition-colors duration-200 ease-in-out"
          ></textarea>
        </div>
        <button
          class="text-white bg-orange-500 border-0 py-2 px-6 focus:outline-none hover:bg-orange-600 rounded text-lg"
          >Send message</button
        >
      </div>
    </div>
  </section>
</Layout>
